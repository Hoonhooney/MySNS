<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/circleImageView_newsfeed_profile"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/profile_default"/>

        <TextView
            android:id="@+id/textView_newsfeed_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="nickname"
            android:layout_marginStart="5dp"
            android:textSize="20sp"
            android:textColor="@color/colorTextDefault"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView_newsfeed_postedImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxHeight="300dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">

            <ImageView
                android:id="@+id/button_newsfeed_like"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_like_black_24dp"/>

            <ImageView
                android:id="@+id/button_newsfeed_comment"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/ic_mode_comment_black_24dp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/textView_newsfeed_uploadedTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#555555"
            android:text="time"/>

        <TextView
            android:id="@+id/textView_newsfeed_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxHeight="50dp"
            android:textColor="@color/colorTextDefault"
            android:text="description"/>

    </LinearLayout>

</LinearLayout>